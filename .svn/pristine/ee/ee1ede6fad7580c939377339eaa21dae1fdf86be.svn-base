<ion-header>

  <ion-navbar color="zuno">
    <ion-title>Rekap Kas</ion-title>
  </ion-navbar>

</ion-header>


<ion-content padding>
    <ion-list>
        <ion-list-header>
            Rekap Penjualan
        </ion-list-header>

        <ion-item *ngFor="let saleAmount of salesAmount">
            <h2>{{ saleAmount.paymentMethodName }}</h2>
            <h3>Total Penjualan: {{ saleAmount.count }}</h3>
            <p>Jumlah: {{ saleAmount.amountDisplay }}</p>
        </ion-item>
    </ion-list>
</ion-content>
