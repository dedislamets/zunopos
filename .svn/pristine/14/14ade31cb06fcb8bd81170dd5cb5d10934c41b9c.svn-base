<ion-header>
    <ion-navbar color="zuno">
        <ion-buttons start>
	        <button ion-button menuToggle>
	          <ion-icon name="menu"></ion-icon>
	        </button>
	    </ion-buttons>      
	    <ion-title>Customers</ion-title>	    
    </ion-navbar>
</ion-header>

<ion-content>
	<ion-searchbar
        placeholder = "Customer"
        [(ngModel)] = "searchCust"
        (ionCancel)="onCancelCust($event)"
        (ionInput)="onInputCust($event)"
        (ionClear) = "clearSearchCust($event)">
    </ion-searchbar>
	<ion-list radio-group [(ngModel)]="customer" *ngIf="!isfiltered">
		<ion-item-group>
		    <ion-item *ngFor="let itemCustomer of listCustomer">
		    	<ion-avatar item-start>
		        	<ion-icon name="contact" item-start style="font-size: 25pt; margin:5px;"></ion-icon>
		      	</ion-avatar>
		    	<ion-label>{{itemCustomer.name}}</ion-label>
		    	<ion-radio value="{{itemCustomer.id}}" item-end (click)="onChangeCustomer(itemCustomer)"></ion-radio>
		    </ion-item>		    
		</ion-item-group>
	</ion-list>

	<ion-list radio-group [(ngModel)]="customer2" *ngIf="isfiltered">
		<ion-item-group>
		    <ion-item *ngFor="let itemCustomer of filteredJson">
		    	<ion-avatar item-start>
		        	<ion-icon name="contact" item-start style="font-size: 25pt; margin:5px;"></ion-icon>
		      	</ion-avatar>
		    	<ion-label>{{itemCustomer.name}}</ion-label>
		    	<ion-radio value="{{itemCustomer.id}}" item-end (click)="onChangeCustomerFilter(itemCustomer)"></ion-radio>
		    </ion-item>		    
		</ion-item-group>
	</ion-list>
</ion-content>
