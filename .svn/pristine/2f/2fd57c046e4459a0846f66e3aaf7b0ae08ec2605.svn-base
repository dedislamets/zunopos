<ion-header>

</ion-header>


<ion-content padding class="page-login">
	<img height="60" src="assets/imgs/icon-login.png" width="70" height="auto" class="login-logo" />

	<ion-grid>
		<ion-row>
			<ion-col col-10 push-1>
				<form #form="ngForm" (ngSubmit)="submitForm(form)" novalidate>
					<ion-list class="login-container">
							<ion-item class="form-group">
								<ion-label floating class="control-label" color >Email</ion-label>
								<ion-input type="text" class="form-control" required [(ngModel)]="input.email" name="email"></ion-input>
							</ion-item>

							<ion-item class="form-group">
								<ion-label floating class="control-label">Password</ion-label>
								<ion-input type="password" class="form-control"required [(ngModel)]="input.password" name="password"></ion-input>
							</ion-item>
					</ion-list>

					<button ion-button block color="zuno-button" class="btn btn-login" type="submit">Login</button>
				</form>
			</ion-col>
		</ion-row>
	</ion-grid>
</ion-content>
